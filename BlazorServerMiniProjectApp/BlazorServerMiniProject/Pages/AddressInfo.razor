@page "/Address"


<h3>Address Info</h3>

<EditForm Model="model" OnValidSubmit="ValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <InputText @bind-Value="model.StreetAddress" placeholder="Street Address" class="form-control m-5" />
    <InputText @bind-Value="model.City" placeholder="City" class="form-control m-5" />
    <InputText @bind-Value="model.State" placeholder="State" class="form-control m-5" />
    <InputText @bind-Value="model.ZipCode" placeholder="Zip Code" class="form-control m-5" />

    <button class="btn btn-primary m-5" type="submit">Submit</button>
</EditForm>

<h3>List of Addresses</h3>
<ul>
    @foreach (var p in address)
    {
        <li>
            @p.StreetAddress @p.City @p.State, @p.ZipCode
        </li>
    }
</ul>

@code {
    private AddressModel model = new();
    private List<AddressModel> address = new();

    private void ValidSubmit()
    {
        address.Add(model);
        model = new();
    }



}
